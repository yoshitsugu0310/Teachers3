<h1>リクエスト</h1>
<%= @match.errors.messages %>
<%= form_for @match do |f| %>

<div class="form-group form-inline">
  <label class="control-label" for="">面談日時</label>
  <%= f.text_field :request_time1_date, class: 'form-control date-picker' %>
  <%= f.select :request_time1_hour, (0..23).to_a.map { |v| "%02d" % v }, {}, class: 'form-control' %> :
  <%= f.select :request_time1_minute, (0..59).to_a.map { |v| "%02d" % v }, {}, class: 'form-control' %>
</div>

<div class="form-group form-inline">
<%= f.text_field :request_time2_date, class: 'form-control date-picker' %>
<%= f.select :request_time2_hour, (0..23).to_a.map { |v| "%02d" % v }, {}, class: 'form-control' %> :
<%= f.select :request_time2_minute, (0..59).to_a.map { |v| "%02d" % v }, {}, class: 'form-control' %>
</div>

<div class="form-group form-inline">
<%= f.text_field :request_time3_date, class: 'form-control date-picker' %>
<%= f.select :request_time3_hour, (0..23).to_a.map { |v| "%02d" % v }, {}, class: 'form-control' %> :
<%= f.select :request_time3_minute, (0..59).to_a.map { |v| "%02d" % v }, {}, class: 'form-control' %>
</div>

  <%= f.submit '登録', class: 'btn btn-primary' %>

<% end %>
